<h1>EDIT INFORMATION</h1>

<form action="/tools" method="post">
  <label for="tool_product">Product: <input id="tool_product" type="text" name="tool[product]" value="<%=@tool.product%>"></label><br>
  <label for="tool_notes">Notes: <input id="tool_notes" type="text" name="tool[notes]" value="<%=@tool.notes%>"></label><br>
  Is it available? <input type="checkbox" name="available" value="yes">Yes <input type="checkbox" name="not_available" value="no">No<br>
  If not available, who checked it out?<br>
  <%if @company.employees.all.empty? == false %>
      <%@company.employees.all.each do |employee|%>
          <input type="checkbox" name="employee_name" value="<%=employee.name%>"><%=employee.name%><br>
          <%end%>
        <%end%>

  <input type="submit" name="submit" value="Edit Tool">
  <input type="hidden" name="tool_id" value="<%=@tool.id%>">
</form>
